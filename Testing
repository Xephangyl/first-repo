answer = str(input('Are we there yet? '))

while answer != 'Yes':
  answer = str(input('Are we there yet? '))







# Checkpoint Project: Rock Paper Scissors
import random

player = ""
computer = ""

print('===================')
print('Rock Paper Scissors')
print('===================')
print('1) ✊')
print('2) ✋')
print('3) ✌️')

player = int(input('Pick a number: '))
computer = random.randint(1, 3)

print(f'You chose: {player}')
print(f'CPU chose: {computer}')

if player == computer:
  print('Tie! Run it again!')
elif player == 1:
  if computer == 2:
    print('The player LAWST!')
  else:
    print('The player won!')
elif player == 2:
  if computer == 3:
    print('The player LAWST!')
  else:
    print('The player won!')
else:
  if computer == 1:
    print('The player LAWST!')
  else:
    print('The player won!')



